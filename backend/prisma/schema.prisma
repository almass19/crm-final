generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SPECIALIST
  SALES_MANAGER
  DESIGNER
}

enum ClientStatus {
  NEW
  ASSIGNED
  IN_WORK
  DONE
  REJECTED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  fullName  String   @map("full_name")
  role      Role?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  createdClients  Client[]            @relation("CreatedBy")
  assignedClients Client[]            @relation("AssignedTo")
  designerClients Client[]            @relation("DesignerAssignedTo")
  assignments     AssignmentHistory[] @relation("AssignedSpecialist")
  designerHistory AssignmentHistory[] @relation("AssignedDesigner")
  assignedBy      AssignmentHistory[] @relation("AssignedByUser")
  comments        Comment[]
  auditLogs       AuditLog[]

  @@map("users")
}

model Client {
  id          String       @id @default(uuid())
  fullName    String?      @map("full_name")
  companyName String?      @map("company_name")
  phone       String
  email       String
  services    String[]
  notes       String?
  status      ClientStatus @default(NEW)
  archived    Boolean      @default(false)

  createdById String @map("created_by_id")
  createdBy   User   @relation("CreatedBy", fields: [createdById], references: [id])

  assignedToId String?   @map("assigned_to_id")
  assignedTo   User?     @relation("AssignedTo", fields: [assignedToId], references: [id])
  assignedAt   DateTime? @map("assigned_at")

  assignmentSeen Boolean @default(false) @map("assignment_seen")

  designerId             String?   @map("designer_id")
  designer               User?     @relation("DesignerAssignedTo", fields: [designerId], references: [id])
  designerAssignedAt     DateTime? @map("designer_assigned_at")
  designerAssignmentSeen Boolean   @default(false) @map("designer_assignment_seen")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  assignmentHistory AssignmentHistory[]
  comments          Comment[]
  auditLogs         AuditLog[]

  @@map("clients")
}

model AssignmentHistory {
  id       String @id @default(uuid())
  clientId String @map("client_id")
  client   Client @relation(fields: [clientId], references: [id])

  type String @default("SPECIALIST")

  specialistId String? @map("specialist_id")
  specialist   User?   @relation("AssignedSpecialist", fields: [specialistId], references: [id])

  designerId String? @map("designer_id")
  designer   User?   @relation("AssignedDesigner", fields: [designerId], references: [id])

  assignedById String @map("assigned_by_id")
  assignedBy   User   @relation("AssignedByUser", fields: [assignedById], references: [id])

  assignedAt DateTime @default(now()) @map("assigned_at")

  @@map("assignment_history")
}

model Comment {
  id       String @id @default(uuid())
  content  String
  clientId String @map("client_id")
  client   Client @relation(fields: [clientId], references: [id])

  authorId String @map("author_id")
  author   User   @relation(fields: [authorId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")

  @@map("comments")
}

model AuditLog {
  id      String  @id @default(uuid())
  action  String
  details String?

  clientId String? @map("client_id")
  client   Client? @relation(fields: [clientId], references: [id])

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")

  @@map("audit_logs")
}
